#include <iostream>
#include <cmath>
using namespace std;
int main() {
    // Write C++ code here
    cout<<" Enter "<<endl;
    cout<<" Number 1 : ";
    float a;
    cin>>a;
    cout<<endl;
    cout<<" Number 2 : ";
    float b;
    cin>>b;
    char oper;
    cout<<" Enter an Operation: ";
    cin>>oper;
    if(oper=='+'){
        cout<<"The sum is: "<<a+b<<endl;
    }
    else if(oper=='-'){
        cout<<"The difference is: "<<a-b<<endl;
    }
    else if(oper=='*'){
        cout<<"The product is: "<<a*b<<endl;
    }
    else if(oper=='/'){
        cout<<"The answer is: "<<a/b<<endl;
    }
    
    
    

    return 0;
}
